    <%-include('./partials/mainCss.ejs')%>
    <%-include('./partials/navCss.ejs')%>
    <script>      
        function cancelSearch(){
            var email = document.getElementById("userEmail").value;
            if(email == ""){
                alert("Sorry! You entered incomplete info");
            }
            else{
                console.log(email)
                window.location.href = `/cancel/${email}`
            }
           
        }
    </script>
